//Age checker but adding the text to the paragraph instead of a console.log
document.querySelector('h1').addEventListener('click', checkAge)
const p = document.querySelector('p')
function checkAge(){
    let age = Number(document.querySelector('input').value)
if ( age < 16){
   p.innerText = 'You cannot drive'
} else if (age < 18) {
    p.innerText = 'you can\'t hate from outside the club'
} else if (age < 21) {
    p.innerText = 'you can\'t drink'
} else if (age < 25) {
    p.innerText = 'you cannot rent cars affordably'
} else {
    p.innerText = 'There is no other milestone to look forward to.'

}
}
